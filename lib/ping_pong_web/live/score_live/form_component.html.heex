<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="score-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :left %>
    <%= number_input f, :left %>
    <%= error_tag f, :left %>
  
    <%= label f, :right %>
    <%= number_input f, :right %>
    <%= error_tag f, :right %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
